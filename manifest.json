{
  "manifest_version": 3,
  "name": "Text Formalizer",
  "version": "1.1",
  "description": "Convert selected text into a more formal version.",
  "permissions": ["contextMenus", "storage", "scripting", "clipboardWrite"],
  "optional_host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}